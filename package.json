{
  "name": "postiva",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=@postiva/client",
    "dev": "turbo dev --filter=@postiva/client",
    "playground:dev": "turbo dev --filter=@postiva/playground",
    "docs:dev": "turbo dev --filter=@postiva/docs",
    "docs:build": "turbo build --filter=@postiva/docs",
    "docs:preview": "turbo preview --filter=@postiva/docs",
    "publish:package": "cd ./packages/library && npm publish",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@9.0.1",
  "engines": {
    "node": ">=18"
  }
}
